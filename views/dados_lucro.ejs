<html>
    <head>
        <meta charset = 'utf-8'/>
        <title>Lucro</title>
        <link rel="stylesheet" type="text/css" href="css/dados_lucro.css">
        <script src="jquery/jquery.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(function(){
                $("#venda_btn").click(function(e){
                e.preventDefault();
                if($('#venda').css('display')=='none') $('#venda').show();
                else $('#venda').hide();
            });

                $("#OS_btn").click(function(e){
                e.preventDefault();
                if($('#OS').css('display')=='none') $('#OS').show();
                else $('#OS').hide();
            });

                $("#conta_btn").click(function(e){
                e.preventDefault();
                if($('#conta').css('display')=='none') $('#conta').show();
                else $('#conta').hide();
            });
        
    });
        </script>
    </head>
    <body>
            <form autocomplete="off" action='/red' method='get'>
                <h1><input type="submit" class="HOME" value="Início" name="HOME"></input></h1>
            </form>
        <h2>Relatório</h2>
        <h3 id="ganhos">Ganhos: R$<%=dados.ganho%></h3>
        <h3>Despesas: R$<%=dados.despesa%></h3>
        <h3>Lucro: R$<%=dados.lucro%></h3>

        <h4>Total de vendas: <%=resultados.venda.length%></h4>
        <h4>Total de Ordens de Serviço: <%=resultados.OS.length%></h4>
        <h4>Total de Contas: <%=resultados.conta.length%></h4>

        <br>
        <br>
        <button id='venda_btn'>Venda</button>
            <div id='venda' class='show' style='display:none'>
                <table>
                   
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Desconto</th>
                        <th>Data</th>
                    </tr>
                    <%for(var I = 0; I<resultados.venda.length; I++){%>
                        <tr>
                            <td><%=resultados.venda[I].IdProduto%></td>
                            <td><%=resultados.venda[I].quantidade%></td>
                            <td><%=resultados.venda[I].desconto%></td>
                            <td><%=resultados.venda[I].dataVenda%></td>
                        </tr>
                    <%}%>
                </table>
            </div>

            <br>
            <br>
            <button id='OS_btn' >Ordem de Serviço</button>
            <div id='OS' style='display:none'>
                <table>
                    
                    <tr>
                        <th>Responsável</th>
                        <th>Cliente</th>
                        <th>Data</th>
                        <th>Total</th>
                    </tr>

                    <%for(var I = 0; I<resultados.OS.length; I++){%>
                            <tr>
                                <td><%=resultados.OS[I].responsavel%></td>
                                <td><%=resultados.OS[I].cliente%></td>
                                <td><%=resultados.OS[I].datacriacao%></td>
                                <td><%=resultados.OS[I].total%></td>
                            </tr>
                        <%}%>
                </table>
            </div>

        <br>
        <br>
        <button id='conta_btn' >Contas</button>
           <div id='conta' style='display:none'>
            <table>
                
                <tr>
                    <th>Conta</th>
                    <th>Data</th>
                    <th>Total</th>
                </tr>
                <%for(var I = 0; I<resultados.conta.length; I++){%>
                        <tr>
                            <td><%=resultados.conta[I].descConta%></td>
                            <td><%=resultados.conta[I].dataConta%></td>
                            <td><%=resultados.conta[I].valorConta%></td>
                        </tr>
                    <%}%>
                
            </table>
        </div>

        <script type="text/javascript" src="js/mostra.js"></script>
    </body>
</html>